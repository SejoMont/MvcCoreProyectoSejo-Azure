@model MvcCoreProyectoSejo.Models.Artista

<form asp-action="CrearArtista" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="IdEvento" />
    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Foto">Foto del Artista</label>
        <input type="file" asp-for="Foto" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Añadir Artista</button>
</form>
